<!DOCTYPE html>
<html>
<head>
  <title>Irrigatomatic</title>
  <%= stylesheet_link_tag "application", :media => "all" %>
  <%= csrf_meta_tags %>
</head>
<body>

	<% flash.each do |name, msg| %>
	  <div class="alert alert-<%= name == :notice ? "success" : "error" %>">
	    <%= msg %>
	  </div>
	<% end %>

	<%= yield %>

</body>
</html>

